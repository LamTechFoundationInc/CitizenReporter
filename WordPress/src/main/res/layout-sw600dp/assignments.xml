<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/posts"
    android:padding="0px"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar" />

    <LinearLayout
        android:id="@+id/postFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <fragment
                android:name="org.codeforafrica.citizenreporter.starreports.ui.main.AssignmentsListFragment"
                android:id="@+id/postList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/right_shadow" />
        </FrameLayout>

        <fragment
            android:name="org.codeforafrica.citizenreporter.starreports.ui.posts.ViewAssignmentFragment"
            android:id="@+id/assignmentDetail"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
